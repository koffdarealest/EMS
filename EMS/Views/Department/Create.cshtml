@using Microsoft.AspNetCore.Mvc.TagHelpers
@model EMS.Models.Departments.CreateDepartmentViewModel

@{
    ViewData["Title"] = "Create Department";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-4 p-4">
        <a href="@Url.Action("Index", "Department")">← Back</a>
        <h2 class="text-center text-primary fw-bold mb-4">Create New Department</h2>

        <form asp-action="Create" method="post">
            <div class="mb-3">
                <label asp-for="Name" class="form-label fw-bold">Department Name</label>
                <input asp-for="Name" class="form-control rounded-pill px-3 py-2 shadow-sm" placeholder="Enter department name..." required/>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="d-flex justify-content-center mt-4">
                <button type="submit" class="btn btn-success px-4 py-2 rounded-pill shadow-lg">
                    Create
                </button>
                <a asp-action="Index" class="btn btn-outline-secondary px-4 py-2 rounded-pill ms-3">
                    Cancel
                </a>
            </div>
        </form>
    </div>
</div>

<style>
    .card {
        max-width: 500px;
        margin: auto;
        background: linear-gradient(135deg, #f8f9fa, #e9ecef);
    }

    .form-control {
        border: 2px solid #ced4da;
        transition: all 0.3s ease-in-out;
    }

    .form-control:focus {
        border-color: #007bff;
        box-shadow: 0 0 8px rgba(0, 123, 255, 0.5);
    }

    .btn-success {
        font-size: 1.1rem;
        font-weight: bold;
        display: flex;
        align-items: center;
        gap: 8px;
    }

    .btn-outline-secondary {
        font-size: 1.1rem;
        display: flex;
        align-items: center;
        gap: 8px;
    }
</style>
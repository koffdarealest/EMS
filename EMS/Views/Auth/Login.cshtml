@using Microsoft.AspNetCore.Mvc.TagHelpers
@model EMS.Models.Auths.LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<div class="d-flex justify-content-center align-items-baseline min-vh-100 bg-light">
    <div class="card p-4 shadow-lg border-0 rounded-4 animate-fade-in mt-lg-5" style="max-width: 400px; width: 100%;">
        <div class="card-body">
            <h3 class="text-center text-primary fw-bold mb-4 animate-slide-down">EMS Welcome!</h3>
            
            @if (ViewBag.Message != null)
            {
                <div class="alert alert-success text-center animate-fade-in">@ViewBag.Message</div>
            }

            <form method="post" class="animate-pop">
                <div class="mb-3">
                    <label class="form-label fw-semibold">Username</label>
                    <div class="input-group">
                        <span class="input-group-text bg-white"><i class="bi bi-person-fill text-primary"></i></span>
                        <input type="text" class="form-control border-start-0" asp-for="Username" required placeholder="Enter your username" />
                    </div>
                    <span class="text-danger small" asp-validation-for="Username"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label fw-semibold">Password</label>
                    <div class="input-group">
                        <span class="input-group-text bg-white"><i class="bi bi-lock-fill text-primary"></i></span>
                        <input type="password" class="form-control border-start-0" asp-for="Password" required placeholder="Enter your password" />
                    </div>
                    <span class="text-danger small" asp-validation-for="Password"></span>
                </div>

                <div class="mb-3 text-center">
                    <span class="text-danger small">@Html.ValidationMessage("authError")</span>
                </div>

                <button type="submit" class="btn btn-primary w-100 py-2 fw-bold shadow-sm animate-bounce">Login</button>

                <div class="text-center mt-3">
                    <a href="#" class="text-decoration-none text-primary">Forgot password?</a>
                </div>
            </form>
        </div>
    </div>
</div>

<link rel="stylesheet" href="~/css/style.css" asp-append-version="true" />
<!-- Bootstrap Icons -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">

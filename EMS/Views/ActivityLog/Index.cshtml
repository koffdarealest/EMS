@using Microsoft.AspNetCore.Mvc.TagHelpers
@model IEnumerable<EMS.Models.ActivityLogs.ActivityListViewModel>

@{
    ViewData["Title"] = "Activity Logs";
}

<h2 class="text-center mb-4">Activity Logs</h2>

<table class="table table-striped table-hover shadow-sm rounded">
    <thead class="thead-dark">
    <tr>
        <th>#</th>
        <th>Detail</th>
        <th>Date</th>
    </tr>
    </thead>
    <tbody>
    @if (Model.Any())
    {
        @foreach (var log in Model)
        {
            <tr>
                <td>@log.Id</td>
                <td>@log.Detail</td>
                <td>@log.CreatedDate</td>
            </tr>
        }
    }
    else
    {
        <tr>
            <td colspan="4" class="text-center text-muted">No activity logs found.</td>
        </tr>
    }
    </tbody>
</table>